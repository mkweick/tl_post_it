<ul class="nav">
  <li><%= link_to "Postit!", root_path, :class => "brand" %></li>
  <div class="btn-group nav-item">
    <%= link_to "#", class: "btn btn-small dropdown-toggle", 
                            "data-toggle" => "dropdown" do %>
      Categories <span class="caret"></span>
    <% end %>
    <ul class="dropdown-menu">
      <% nav_categories.each do |ctg| %>
        <li><%= link_to ctg.name, category_path(ctg) %></li>
      <% end %>
    </ul>
  </div>
  <% if logged_in? %>
    <div class="nav-item">
      <li>
        <%= link_to "New Post", new_post_path, class: "btn btn-small btn-success" %>
      </li>
    </div>
    <div class="btn-group nav-item">
      <%= link_to "#", class: "btn btn-small dropdown-toggle", 
                              "data-toggle" => "dropdown" do %>
        <%= current_user.first_name %> <span class="caret"></span>
      <% end %>
      <ul class="dropdown-menu">
        <li>
          <%= link_to edit_user_path(current_user) do %>
            <i class="icon-pencil"></i>
            Edit Profile
          <% end %>
        </li>
        <li>
          <%= link_to user_path(current_user) do %>
            <i class="icon-user"></i>
            View Profile
          <% end %>
        </li>
        <li>
          <%= link_to logout_path do %>
            <i class="icon-circle-arrow-left"></i>
            Logout
          <% end %>
        </li>
      </ul>
    </div>
  <% else %>
    <div class="nav-item">
      <li>
        <%= link_to "Register", register_path, class: "btn btn-small btn-success" %>
      </li>
    </div>
    <div class="nav-item">
      <li>
        <%= link_to "Login", login_path, class: "btn btn-small" %>
      </li>
    </div>
  <% end %>
</ul>