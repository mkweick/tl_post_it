<%= render "shared/content_title", title: "Two-Factor Pin Submission" %>

<div class="pin-login">
  <div class="span4 well">
    <%= form_tag pin_path, method: 'post' do %>
      <div class="control-group">
        <%= text_field_tag :pin, nil, autofocus: true, class: "pin" %>
      </div>  
      <%= submit_tag "Submit", class: "btn btn-small btn-primary pin-submit" %>
    <% end %>
  </div>
</div>