<%= render "shared/content_title", title: "Two-Factor Pin Submission" %>

<%= form_tag pin_path, method: 'post' do %>
  <div class="control-group">
    <%= label_tag :pin %>
    <%= text_field_tag :pin, nil, autofocus: true %>
  </div>
  
  <%= submit_tag "Submit", class: "btn btn-small btn-primary" %>
<% end %>