<%= render "shared/content_title", title: "Login" %>

<div class="span5 well login-user user">
  <div class="login">
    <%= form_tag "/login" do %>
      <div class="control-group">
        <%= label_tag :username %>
        <%= text_field_tag :username, params[:username], autofocus: true,
                                                          class: "username" %>
      </div>
      
      <div class="control-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: "password" %>
      </div>
      
      <%= submit_tag "Log in", class: "btn btn-small btn-primary" %>
    <% end %>
  </div>
</div>