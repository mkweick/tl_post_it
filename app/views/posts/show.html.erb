<div class='span8 post'>
  <div class='page-title'>
    <span class='title'><%= @post.title %></span>
    <%= link_to 'Delete', @post, method: 'delete',
                        confirm: 'Are you sure you want to delete this post?',
                        class: 'btn btn-mini btn-danger pull-right' %>
    <%= link_to 'Edit', edit_post_path(@post), 
                        class: 'btn btn-mini btn-info pull-right' %>
    <br/><br/>
    <div class='title-info'>
      Website: <%= link_to @post.url, fix_external_url(@post.url), 
                                      target: "_blank", class: 'url' %>
      <br/>
      By: <%= link_to @post.creator.username.upcase, '#', class: 'name' %>
      <span class='date'>
        <%= format_date(@post) %>
      </span>
      <%= render 'categories/category_tags', post_obj: @post %>
    </div>
    <hr/>
  </div>

  <div class='page'>
    <%= @post.description %>
    <hr/>
    
    <%= form_for [@post, @comment] do |f| %>
      <%= render 'shared/errors', obj: @comment %>
      <div class='control-group'>
        <%= f.label 'Leave a comment:' %>
        <%= f.text_area :body, rows: 5, class: 'span4' %>
      </div>
      
      <%= f.submit 'Create Comment', class: 'btn btn-small btn-primary' %>
    <% end %>
      
    <h5>Comments:</h5>
    <% if !@comments.nil? %>
      <% @comments.each do |comment| %>
        <div class='well span6'>
          <em>"<%= comment.body %>"</em>
          <p class='comment-info'>
            <%= link_to comment.creator.username, '#', class: 'name' %> - 
            <%= time_ago_in_words(comment.created_at) %> ago
          </p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>