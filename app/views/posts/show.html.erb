<div class='span8 post'>
  <div class='post-title'>
    <%= link_to gravatar_for(@post.creator, size: 70), user_path(@post.creator) %>
    <span class='title'><%= @post.title %></span>
    <% if current_user == @post.creator %>
      <%= link_to 'Delete', @post, method: 'delete',
                          confirm: 'Are you sure you want to delete this post?',
                          class: 'btn btn-mini btn-danger pull-right' %>
      <%= link_to 'Edit', edit_post_path(@post), 
                          class: 'btn btn-mini btn-info pull-right' %>
      <br/>
    <% end %>
    <div class='title-info'>
      Website: <%= link_to @post.url, fix_external_url(@post.url), 
                                      target: "_blank", class: 'url' %>
      <br/>
      By: <%= link_to author_name_caps(@post), user_path(@post.creator),
                                                          class: 'name' %>
      <span class='date'>
        <%= format_date(@post) %>
      </span>
      <%= render 'categories/category_tags', post_obj: @post %>
    </div>
    <hr/>
  </div>

  <div class='post-info'>
    <%= @post.description %>
    <hr/>
    
    <% if logged_in? %>
      <%= render 'comments/comment_form' %>
    <% end %>
    
    <h5>Comments:</h5>
    <% unless @comments.nil? %>
      <%= render 'comments/display_comments', obj: @comments, comment_post: nil,
                                                              user_page: nil %>
    <% end %>
  </div>
</div>