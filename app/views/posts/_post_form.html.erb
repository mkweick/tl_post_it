<div class='well span7 post'>
  <div class="new-edit">
    <%= form_for @post do |f| %>
      <div class='control-group'>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'title' %>
      </div>
      
      <div class='control-group'>
        <%= f.label :url %>
        <%= f.text_field :url, class: 'url' %>
      </div>
      
      <div class='control-group'>
        <%= f.label :description %>
        <%= f.text_area :description, class: 'description' %>
      </div>
      
      <%= f.submit ( f.object.new_record? ? 'Create Post' : 'Update Post'),
                                    class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>