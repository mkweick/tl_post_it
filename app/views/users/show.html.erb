<%= render "shared/content_title", title: "#{ @user.username }" %>

<div class="span8">
  <div class="well">
    <%= gravatar_for(@user, size: 110) %>
    <%= render "user_info" %>
  </div>
  <br/>
  <h4>Activity:</h4>
</div>

<div class="span9">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#posts" data-toggle="tab">
      Posts (<%= @user.posts.size %>)
    </a></li>
    
    <li><a href="#comments" data-toggle="tab">
      Comments (<%= @user.comments.size %>)
    </a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="posts">
      <%= render "posts/display_posts", hide_profile_image: true %>
    </div>
    
    <div class="tab-pane" id="comments">
      <%= render "comments/display_comments", hide_profile_image: true,
                                              show_post_link: true %>
    </div>
  </div>
</div>